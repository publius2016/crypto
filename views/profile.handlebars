      <option value="eth">Ethereum</option>
      <option value="iot">IOTA</option>
      <option value="etc">Ethereum Classic</option>
      <option value="dsh">Dash</option>
      <option value="xrp">Ripple</option>
      <option value="bcc">Bitcoin Cash</option>
